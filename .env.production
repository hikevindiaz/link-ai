# Production environment configuration
# Fixed for Vercel deployment issues

# Enable Vercel-compatible build mode that uses our compatibility layer
NEXT_PUBLIC_VERCEL_COMPATIBLE=true

# Disable experimental streaming features that might be causing the build issue
NEXT_DISABLE_EXPERIMENTAL_STREAMING=true 

# Use a stable API version 
OPENAI_API_VERSION=2023-05-15

# Ensure we use the fixed version of the StreamingTextResponse component
NEXT_PUBLIC_USE_FIXED_STREAMING=true 

NEXT_SKIP_TYPE_CHECK=1
NEXT_IGNORE_ESLINT=1
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_DISABLE_CONTENTLAYER=true
NEXT_PUBLIC_FALLBACK_TO_STATIC=true
NODE_OPTIONS="--max-old-space-size=3072"
NEXT_MINIMAL_BUILD=1 